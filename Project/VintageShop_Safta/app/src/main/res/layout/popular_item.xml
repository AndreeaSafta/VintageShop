<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">
        
        <ImageView
            android:layout_width="280dp"
            android:layout_height="190dp"
            android:id="@+id/pop_img"
            android:src="@mipmap/welcome_page"
            android:background="@drawable/rounded_edit_text"
            android:scaleType="centerCrop"
            android:clipToOutline="true"/>

        <TextView
            android:id="@+id/pop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font1"
            android:text="Popular Products"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="19sp"/>

        <TextView
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:id="@+id/pop_des"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="description"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:fontFamily="@font/font1"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <ImageView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:src="@drawable/rating_bar5"
                android:layout_marginLeft="-5dp"/>
            
            <TextView
                android:id="@+id/pop_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="5.0"
                android:fontFamily="@font/font1"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/pop_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
               android:gravity="end"
                android:text="Discount 20% Off"
                android:fontFamily="@font/font1"
                android:layout_weight="1"
                android:textColor="@color/red"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>